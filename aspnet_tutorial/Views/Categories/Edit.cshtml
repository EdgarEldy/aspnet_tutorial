@model aspnet_tutorial.Models.category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Templates/Default/default_layout.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">Category</div>
        <div class="panel-body">
            <div class="col-md-6">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.cat_id)

                    <div class="form-group">
                        <label> Category name :</label>
                        @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" id="submit" class="btn btn-primary">Save</button>
                    <button type="reset" name="reset" onclick="closed()" class="btn btn-default">Reset</button>
                }
            </div>
        </div>
    </div>
</div><!-- /.col-->
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
