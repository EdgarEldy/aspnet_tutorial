@model aspnet_tutorial.Models.order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Templates/Default/default_layout.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">Details</div>
        <div class="panel-body">
            <table>
                <tbody>
                <tr>
                    <td>
                        Customer Name :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.customer.name)
                    </td>
                </tr>
                <tr>
                    <td>
                        Product Name :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.product.product_name)
                    </td>
                </tr>
                <tr>
                    <td>
                        Qty :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.qty)
                    </td>
                </tr>
                <tr>
                    <td>
                        Total :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.total)
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.order_id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
