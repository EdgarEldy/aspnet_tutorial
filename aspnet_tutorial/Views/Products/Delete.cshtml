@model aspnet_tutorial.Models.product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Templates/Default/default_layout.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">Delete a product</div>
        <div class="panel-body">
            <h4>Are you sure you want to delete this?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Category name :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.category.category_name)
                </dd>

                <dt>
                    Product name :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.product_name)
                </dd>

                <dt>
                    Unit price :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.unit_price)
                </dd>



            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>
